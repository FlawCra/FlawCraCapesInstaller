                            </Grid>
                        </Button>
                        <CheckBox x:Name="chequeBox" Content="Check this box to agree to the EULA." Foreground="WhiteSmoke" FontFamily="/Cloaks+;component/#Minecraft" HorizontalAlignment="Left" Margin="140,282,0,0" VerticalAlignment="Top" Width="246"/>
                    </Grid>

                </Border>
                <Border x:Name="CreditsFrame" CornerRadius="2.5,2.5,0,0" Background="#FF141414" HorizontalAlignment="Left" Height="382" Margin="122,0,0,0" VerticalAlignment="Center" Width="520" BorderThickness="0" Opacity="0" Visibility="Collapsed">
                    <Grid>
                        <Image Source="C.png" Margin="216,36,215,250"/>
                        <Label x:Name="CloaksPlusLabelCredits" FontFamily="/Cloaks+;component/#Minecraft" Content="Credits" Foreground="White" Margin="215,130,215,219" FontSize="23"/>
                        <Label x:Name="CreditDeveloper1" FontFamily="/Cloaks+;component/#Minecraft" HorizontalContentAlignment="Center" Content="• Cloaks+ Installer made by zuhn and seizure&#xA;" Foreground="#bdbdbd" Margin="10,168,10,179" FontSize="15"/>
