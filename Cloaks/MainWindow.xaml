                <Button x:Name="SideHomButton" Style="{DynamicResource HoverButton}" Background="#1c1c1c" BorderThickness="0" Foreground="White" HorizontalAlignment="Left" Width="128" FontFamily="/Cloaks;component/#Kiona" Margin="10,96,0,211" Height="28" Click="HomeFrame_Click" FontSize="16">
                    <Grid>
                        <Image x:Name="HomeImage" Source="home.png" Margin="7,1,93,2"/>
                        <Label Content="Home" VerticalContentAlignment="Center" VerticalAlignment="Top" Foreground="White" Background="{x:Null}" FontFamily="/Cloaks+;component/#Minecraft" Margin="30,-3,39,0" FontSize="15" Height="26"/>
                    </Grid>
                </Button>
                <Button x:Name="InstallButtonSide" Style="{DynamicResource HoverButton}" Background="#1c1c1c" BorderThickness="0" Foreground="White" HorizontalAlignment="Left" Width="128" FontFamily="/Cloaks;component/#Kiona" Margin="10,129,0,178" Height="28" Click="InstallFrame_Click" FontSize="16">
                    <Grid>
                        <Image x:Name="dlimage" Source="download.png" Margin="7,1,93,2"/>
